<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/app_name">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical" >

             <ImageView
                 android:id="@+id/sh_pic"
                 android:layout_width="match_parent"
                 android:layout_height="180dp"
                 android:layout_weight="0.04"
                 android:scaleType="fitXY"
                 android:src="@mipmap/tmall_ico" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical" >

                 <TextView
                     android:id="@+id/butt_name"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:padding="20dp"
                     android:text="课程介绍
3D精密模型全景班
支持随到随学，11月12日过期"
                     android:textColor="#000000"
                     android:textSize="15sp" />

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal" >

                     <TextView
                         android:id="@+id/butt_yuanjia"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="20dp"
                         android:text="优惠券:10.00"
                         android:textColor="#DA2727"
                         android:textSize="15sp" />

                     <TextView
                         android:id="@+id/butt_jiage"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="20dp"
                         android:text="现价:￥198"
                         android:textColor="#DA2727"
                         android:textSize="22sp" />
                 </LinearLayout>

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal" >

                     <TextView
                         android:id="@+id/butt_xiaoliang"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:padding="20dp"
                         android:text="月销量:300000" />

                     <TextView
                         android:id="@+id/butt_fuw"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:padding="180dp"
                         android:text="服务分:4.9" />

                     <TextView
                         android:id="@+id/butt_xianjia"
                         android:layout_width="318dp"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                         android:layout_alignParentTop="true"
                         android:layout_marginTop="42dp"
                         android:padding="20dp"
                         android:text="原价:208"
                         android:textColor="#DA2727"
                         android:textSize="14sp" />
                 </RelativeLayout>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginTop="200dp"
                 android:orientation="vertical" >

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:text="商品介绍"
                     android:textSize="23sp" />

                 <TextView
                     android:id="@+id/sc_jiehsao"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:maxLines="2"
                     android:padding="200dp"
                     android:text="商品介绍商品介绍商品介绍商品介绍商品介绍商品介绍商品介绍商品介绍商品介绍商品介绍商品介绍商品介绍商品介绍商品介绍商品介商品介绍"
                     android:textSize="15sp" />

                 <View
                     android:layout_width="match_parent"
                     android:layout_height="2dp"
                     android:layout_marginTop="20dp"
                     android:background="#C1C1C1" />

                 <Button
                     android:id="@+id/butt_chakan"
                     android:layout_width="wrap_content"
                     android:layout_height="200dp"
                     android:layout_gravity="center"
                     android:layout_marginTop="200dp"
                     android:background="@drawable/a10"
                     android:padding="20dp"
                     android:text="查看图文详情" />

                 <ListView
                     android:id="@+id/webview"
                     android:layout_width="match_parent"
                     android:layout_height="6655dp"
                     android:layout_marginTop="200dp"
                     android:minHeight="100dp"
                     android:visibility="gone" >
                 </ListView>
             </LinearLayout>

             <View
                 android:layout_width="match_parent"
                 android:layout_height="2dp"
                 android:background="#C1C1C1" />
         </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <Button android:text="领券儿"
        android:id="@+id/button_lingjuan"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:onClick="showUrl"
        android:background="#FF3F1B"
        android:layout_height="wrap_content" />
</RelativeLayout>