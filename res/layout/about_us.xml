<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="47dp"
    android:background="@color/base_bg_color"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@color/green_bg"
        android:contentDescription="@string/app_name" />

	<ImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/user_home" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/about_us"
        android:textColor="@color/base_text_color"
        android:textSize="@dimen/txt_h3" />

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="54dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/about_msg_pressed" />

</RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2.76"
       android:orientation="vertical" >

       <LinearLayout
           android:id="@+id/linearLayout1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:orientation="vertical" >

           <TextView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:singleLine="true"
               android:text="@string/server_phone"
               android:textColor="@color/base_text_color"
               android:textSize="@dimen/txt_h3" />

           <TextView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="10dp"
               android:layout_marginTop="50dp"
               android:gravity="center"
               android:singleLine="true"
               android:text="@string/copyright"
               android:textColor="@color/base_text_color"
               android:textSize="@dimen/txt_h5" />
       </LinearLayout>

       <RelativeLayout
           android:id="@+id/layout_tag"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="55dp"
           android:background="@drawable/about_circle"
           android:gravity="center"
           android:orientation="vertical" >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="14dp"
               android:singleLine="true"
               android:text="@string/app_version"
               android:textColor="@color/black"
               android:textSize="@dimen/txt_h3" />

           <TextView
               android:id="@+id/tv_com"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="44dp"
               android:singleLine="true"
               android:text="@string/company_eng_name"
               android:textColor="@color/black"
               android:textSize="@dimen/txt_h3" />

       </RelativeLayout>

       <TextView
           android:id="@+id/tv_intr"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="20dp"
           android:singleLine="true"
           android:text="@string/introduce"
           android:textColor="@color/base_text_color"
           android:textSize="@dimen/txt_h2" />

       <Button
           android:id="@+id/button2"
           android:layout_width="160dp"
           android:layout_height="@dimen/user_button_height"
           android:layout_below="@+id/layout_tag"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="18dp"
           android:background="@color/green_bg"
           android:gravity="center"
           android:text="@string/check_update"
           android:textColor="@color/white"
           android:textSize="@dimen/txt_h3" />

   </RelativeLayout>

</LinearLayout>