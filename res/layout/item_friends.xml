<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:src="@drawable/image_user" />

    <TextView
        android:id="@+id/txt_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/iv_avatar"
        android:text="小花"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_h2" />


    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_avatar"
        android:layout_alignLeft="@+id/txt_nickname"
        android:layout_weight="0.04"
        android:text="好的。"
        android:textColor="@color/black" />

	
    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_description"
        android:layout_alignBottom="@+id/txt_description"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_weight="0.04"
        android:text="10:30" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_above="@+id/txt_time"
        android:layout_alignParentRight="true"
        android:src="@drawable/a09" />

</RelativeLayout>